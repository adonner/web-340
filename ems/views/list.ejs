<!DOCTYPE html>
<html lang="en">
  <% include header %>

  <body>
    <% include navbar %>

    <div role="main" class="container" style="width: 50%;">
      <br /><br />
      <h2><%= title %></h2>
      <!-- Test to see if the employees list exist and that it is an array-->
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>First name</th>
                <th>Last name</th>
              </tr>
            </thead>
            <tbody>
              <!-- Output the employee information stored in the database -->
              <% employees.forEach(function(employee){ %>
                <tr>
                  <td><%= employee.firstName %></td>
                  <td><%= employee.lastName %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
    </div>

    <% include footer %>
    <% include scripts %>
  </body>
</html>
